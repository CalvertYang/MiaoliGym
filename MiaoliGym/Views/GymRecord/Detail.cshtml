    <div class="row">
        <div class="span3">
            @Html.DisplayNameFor(model => model.Gym.Name)
        </div>
        <div class="span6">
            @Html.DisplayFor(model => model.Gym.Name))
        </div>
    </div>
    <div class="row">
        <div class="span3">
            @Html.DisplayNameFor(model => model.Event)
        </div>
        <div class="span6">
            @Html.DisplayFor(model => model.Event)
        </div>
    </div>
    <div class="row">
        <div class="span3">
            @Html.DisplayNameFor(model => model.ApprovalNo)
        </div>
        <div class="span6">
            @Html.DisplayFor(model => model.ApprovalNo)
        </div>
    </div>
    <div class="row">
        <div class="span3">
            @Html.DisplayNameFor(model => model.Contacter)
        </div>
        <div class="span6">
            @Html.DisplayFor(model => model.Contacter)
        </div>
    </div>
    <div class="row">
        <div class="span3">
            @Html.DisplayNameFor(model => model.ContactPhone)
        </div>
        <div class="span6">
            @Html.DisplayFor(model => model.ContactPhone)
