    <div class="row">
        <div class="span3">
            @Html.DisplayNameFor(model => model.LendUnit)
        </div>
        <div class="span6">
            @Html.DisplayFor(model => model.LendUnit)
        </div>
    </div>
</div>


<h4>繳費項目</h4>
<div class="container">
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().PayableDate)</th>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().Price)</th>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().PaidOn)</th>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().IsPaid)</th>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().ReceiptNo)</th>
                @* 用 Helper 調整顯示若無日期則顯示未繳費或未建立 *@
                <th>@Html.DisplayNameFor(model => model.PayItems.First().ReceiptCreateOn)</th>
                <th>@Html.DisplayNameFor(model => model.PayItems.First().ReturnGovOn)</th>  
                <th>@Html.DisplayNameFor(model => model.PayItems.First().Comment)</th>  
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PayItems)
            { 
                <tr>
                    <td>@Html.DisplayFor(i => item.Name)</td>
                    <td>@Html.DisplayFor(i => item.PayableDate)</td>
                    <td>@Html.DisplayFor(i => item.Price)</td>
                    <td>@Html.DisplayFor(i => item.PaidOn)</td>
                    <td>@Html.DisplayFor(i => item.IsPaid)</td>
                    <td>@Html.DisplayFor(i => item.ReceiptNo)</td>
                    <td>@Html.DisplayFor(i => item.ReceiptCreateOn)</td>
                    <td>@Html.DisplayFor(i => item.ReturnGovOn)</td>
                    <td>@Html.DisplayFor(i => item.Comment)</td>
                </tr>
            }
        </tbody>
    </table>
</div>


